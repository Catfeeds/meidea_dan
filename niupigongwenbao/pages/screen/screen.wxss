/*筛选*/

.tc {
  display: flex;
}

.tabTit {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid 1px #eee;
  width: 100%;
  z-index: 1;
  background: #f5f5f5;
  font-size: 26rpx;
}

.tabTit .active {
  /*color: #e64340;*/
  background: #fff;
}

.tabTit .actives {
  /*color: #e64340;*/
  background: #fff;
}

.flex1 {
  width: 33.33%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.tabTit .active .sr {
  transform: rotate(180deg);
  background: none;
}

.tabTit image {
  width: 20rpx;
  height: 18rpx;
  vertical-align: middle;
  margin-left: 5px;
}

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 750rpx;
  overflow: hidden;
  z-index: 999;
  background: #fff;
  padding-bottom: 7rpx;
  border-bottom: solid 1px #eee;
  position: absolute;
}

.tabLayer text {
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: solid 1px #eee;
  margin: 20rpx 0 0 26rpx;
  display: block;
  font-size: 28rpx;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.fles {
  font-size: 28rpx;
  /*width: 93%;*/
  padding: 20rpx;
  border-bottom: 1rpx solid #f1f1f1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.kls {
  display: none;
  float: right;
}

.tabLayer .active {
  color: #0092d8;
  border-color: #0092d8;
  border-bottom: 1rpx solid #eee;
 border-left:4rpx solid #0092d8; 
}

.tabLayer .actives {
  color: #0092d8;
  border-color: #e64340;
  display: inline-block;
}

